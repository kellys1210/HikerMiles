{{! Trails - Handlebars Template }}

{{! for delete function: }}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Brain Implants</h1>

{{! Create a table }}
<table id="trails-table">
  <thead>
    <tr>
      <th>Implant ID</th>
      <th>Patron Name</th>
      <th>Expiration Date</th>
      <th>Berserk Mode</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.implant_id}}</td>
        <td>{{this.patron_name}}</td>
        <td>{{this.expiration_date}}</td>
        <td>{{this.berserk_mode}}</td>
        <td><button onclick="deleteTrail({{this.trail_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/js/brain_implants.js"></script>

{{! Form to add a record to the table }}
<p>To add a new trail, please enter the details below and click 'Submit'!</p>
<form id="add-trail-form">
  <label for="input-park">Park Name:* </label>
  <select name="input-park" id="input-park">
    {{#each parks}}
      <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <label for="input-name">Trail Name:* </label>
  <input type="text" name="input-name" id="input-name" />

  <label for="input-latitude">Latitude:* </label>
  <input type="text" name="input-latitude" id="input-latitude" />

  <label for="input-longitude">Longitude:* </label>
  <input type="text" name="input-longitude" id="input-longitude" />

  <label for="input-length">Length:* </label>
  <input type="text" name="input-length" id="input-length" />

  <input type="submit" />
</form>

<script src="/js/brain_implants.js"></script>
