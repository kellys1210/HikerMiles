{{! Trails - Handlebars Template }}

{{! for delete function: }}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Brain Implants</h1>

{{! Create a table }}
<table id="trails-table">
  <thead>
    <tr>
      <th>Implant ID</th>
      <th>Patron Name</th>
      <th>Expiration Date</th>
      <th>Berserk Mode</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    {{#each brain_implants}}
      <tr>
        <td>{{this.implant_id}}</td>
        <td>{{this.patron_name}}</td>
        <td>{{this.expiration_date}}</td>
        <td>{{this.berserk_mode}}</td>
        <td><button onclick="deleteTrail({{this.trail_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{! Form to add a record to the table }}
<p>To add a new trail, please enter the details below and click 'Submit'!</p>
<form id="add-brain-implant-form">

  <label for="input-name">Implant ID:* </label>
  <input type="text" name="implant_id" id="implant_id" />

  <label for="input-patron">Patron Name:* </label>
  <select name="input-patron" id="input-patron">
    <option value="">NULL</option>
    {{#each patrons}}
      <option value="{{this.patron_id}}">{{this.patron_name}}</option>
    {{/each}}
  </select>

  <label for="input-latitude">Expiration Date:* </label>
  <input type="text" name="expiration_date" id="expiration_date" />

  <label for="input-longitude">Berserk Mode:* </label>
  <select name="input-berserk_mode" id="input-berserk_mode">
      <option value="0">False</option>
      <option value="1">True</option>
  </select>

  <input type="submit" />
</form>

<script src="/js/brain_implants.js"></script>
